{
    "name": "obsidian-todoist-creator",
    "version": "1.0.0",
    "description": "Plugin completo de Obsidian para crear tareas en Todoist con todas las funcionalidades avanzadas",
    "main": "main.js",
    "scripts": {
        "dev": "node esbuild.config.mjs",
        "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
        "clean": "rm -f main.js main.js.map",
        "rebuild": "npm run clean && npm run build"
    },
    "keywords": [
        "obsidian",
        "plugin",
        "todoist",
        "productivity",
        "tasks",
        "calendar",
        "multilanguage"
    ],
    "author": "Tu Nombre",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^22.0.0",
        "builtin-modules": "^4.0.0",
        "esbuild": "^0.21.0",
        "obsidian": "latest",
        "typescript": "^5.5.0"
    }
}